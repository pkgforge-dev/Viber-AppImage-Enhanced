#!/bin/sh

if [ "$1" = '--auto-start' ] || [ "${APPIMAGE_VIBER_AUTOSTART:-0}" = 1 ]; then
	if [ "$1" = '--auto-start' ]; then
    	shift
    fi
	dst_dir="${HOST_XDG_CONFIG_HOME}/autostart"
	mkdir -p "$dst_dir"
	echo "[Desktop Entry]
Type=Application
Name=Viber
Exec=$APPIMAGE StartInBackground
X-GNOME-Autostart-enabled=true" > "$dst_dir"/com.viber.Viber.desktop
fi
